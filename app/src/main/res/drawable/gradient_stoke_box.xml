<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Stroke Layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#00FF99"
                android:endColor="#00C6FF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Inner Background Layer with padding (acts like stroke width) -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Or your background color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</layer-list>
